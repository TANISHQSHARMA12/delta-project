<% layout("layouts/boilerplate.ejs") %>
  <body>
    <div class="row">
      <div class="col-8 offset-2 " >
        
    <h3 class="ms-5">Create a New Listing</h3>
    <form method="POST" action="/listings" class="ms-5 needs-validation" novalidate enctype="multipart/form-data" >
      <div class="mb-3" >
       
      <label for="Title" class="form-label">Enter Your Title:</label>
      <input name="listing[title]" placeholder="Enter Title" type="text"  id="Title" class="form-control" required/>
      <div class="valid-feedback">Title Looks Good!!</div>
    </div>
        
     
      <div class="mb-3" >
        <label for="description" class="form-label" >Enter Your Description:</label>
      <textarea
        name="listing[description]"placeholder="Enter Description" id="description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter short Description!!</div>
      </div>
    <div class="mb-3">
         <label for="image" class="form-label" >Upload listing Image:</label>
         <input
        name="listing[image]" type="file" id="image" class="form-control" />
        required
    </div>
      <div class="row">
      <div class="mb-3 col-md-6" >
         <label for="price" class="form-label" >Enter Your Price:</label>
      <input name="listing[price]" placeholder="Enter price"   id="price" class="form-control" required/>
    <div class="invalid-feedback">Please enter valid Price</div>

    </div>
   
      <div class="mb-3 col-md-6" >
         <label for="country" class="form-label" >Enter Your Country:</label>
      <input name="listing[country]" placeholder="Enter Country" type="text" id="country"  class="form-control" required/>
    <div class="invalid-feedback">Please enter valid Country</div>
  </div>
      </div>
      <div class="mb-3">
         <label for="location" class="form-label" >Enter Your location:</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        id="location"
        class="form-control" required
      />
      <div class="invalid-feedback">Please enter valid location</div>
    </div>
      <button class="btn btn-dark add-btn mt-3" >Add</button>
     
    </form>
  </body>
  </div>
  </div>
