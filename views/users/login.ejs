<% layout("layouts/boilerplate.ejs") %>
<div class="row">
    <h1 class="col-6 offset-3">Login for WanderLust</h1>
    <div class="col-6 offset-3" >
        <form method="post" action="/login" class="needs-validation" novalidate>
            <div class="mb-3">
         <label for="username" class="form-label">Username:</label>
         <input name="username"  type="text"  id="username" class="form-control" required/>
         <div class="valid-feedback">Looks Good!!</div>
         </div>
         <div class="mb-3">
         <label for="password" class="form-label">Password:</label>
         <input name="password"  type="password"  id="password" class="form-control" required/>
         <div class="valid-feedback">Loosks Good!!</div>
         </div>
         <button class="btn btn-success mb-3">Login!!</button>
         
        </form>
    </div>
</div>